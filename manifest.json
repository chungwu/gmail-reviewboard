{
  "name": "Gmail Reviewboard Plugin",
  "version": "1.0",
  "description": "Extension for adding basic ReviewBoard integration to Gmail.  View/approve from ReviewBoard page actions, and 'w' shortcut to go to review diff, and 'W' to approve.",
  "background_page": "background.html",
  "options_page": "options.html",
  "content_scripts": [{
    "js": ["js/jquery.js", "js/jquery.hashchange.js", "js/gmrb.js"],
    "matches": ["http://mail.google.com/*", "https://mail.google.com/*"]
  }],
  "page_action": {
    "default_icon": "icons/reviewboard.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", "http://mail.google.com/", "https://mail.google.com/", "http://*/", "https://*/"
  ]
}